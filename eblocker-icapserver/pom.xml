                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}_${project.version}.${maven.build.timestamp}_all</finalName>
        <plugins>
            <plugin>
                <!-- Build an executable JAR -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries><!--insert project.name, project.version etc. into MANIFEST.MF-->
                            <mainClass>org.eblocker.server.app.EblockerServerApp</mainClass>
                            <useUniqueVersions>false</useUniqueVersions>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.9</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-resources-bin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/bin</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/package/bin</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-scripts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/scripts</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/package/scripts</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-conf</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/conf</outputDirectory>
                            <includeEmptyDirs>true</includeEmptyDirs>
                            <resources>
                                <resource>
                                    <directory>src/main/package/conf</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-init</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/init</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/package/init</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-default</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/default</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/package/default</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-systemd</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/package/systemd</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/package/systemd</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-configuration</id>
                    </execution>
                    <execution>
                        <id>filter-build-config</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- Build a Debian package: -->
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <deb>${debTargetDir}/${project.artifactId}_${project.version}.${maven.build.timestamp}_all.deb</deb>
                            <snapshotExpand>true</snapshotExpand>
                            <dataSet>
                                <data>
                                    <src>${project.build.directory}/${project.build.finalName}.jar</src>
                                    <type>file</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/opt/eblocker-icap/lib</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/lib/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/opt/eblocker-icap/lib</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/bin/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/opt/eblocker-icap/bin</prefix>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/scripts/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/opt/eblocker-icap/scripts</prefix>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/conf/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/opt/eblocker-icap/conf</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>icapd</user>
                                        <group>icapd</group>
                                    </mapper>
                                    <paths>
                                        <path>/opt/eblocker-icap/conf/easylist</path>
                                        <path>/opt/eblocker-icap/conf/eblocker</path>
                                        <path>/opt/eblocker-icap/conf/filter</path>
                                        <path>/opt/eblocker-icap/conf/customercreated</path>
										<path>/opt/eblocker-icap/conf/scriptlets</path>
                                    </paths>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/init/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/init.d</prefix>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/default/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/default</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/package/systemd/</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/systemd/system/icapserver.service.d</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>icapd</user>
                                        <group>icapd</group>
                                        <dirmode>750</dirmode>
                                    </mapper>
                                    <paths>
                                        <path>/var/log/eblocker</path>
                                    </paths>
                                </data>
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>icapd</user>
                                        <group>icapd</group>
                                        <dirmode>755</dirmode>
                                    </mapper>
                                    <paths>
                                        <path>/opt/eblocker-icap/network</path>
                                        <path>/opt/eblocker-icap/keys</path>
                                        <path>/opt/eblocker-icap/keys/mobile</path>
                                        <path>/opt/eblocker-icap/keys/mobile/clients</path>
                                        <path>/opt/eblocker-icap/keys/ssl</path>
                                        <path>/opt/eblocker-icap/registration</path>
                                        <path>/opt/eblocker-icap/tmp</path>
                                    </paths>
                                </data>

                                <!-- openvpn squid acls-->
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>root</user>
                                        <group>root</group>
                                        <dirmode>755</dirmode>
                                    </mapper>
                                    <paths>
                                        <path>/etc/squid/openvpn</path>
                                    </paths>
                                </data>

                                <!-- openvpn profiles -->
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>icapd</user>
                                        <group>icapd</group>
                                        <dirmode>755</dirmode>
                                    </mapper>
                                    <paths>
                                        <path>/opt/eblocker-icap/network/openvpn</path>
                                    </paths>
                                </data>

                                <!-- domain black lists cache -->
                                <data>
                                    <type>template</type>
                                    <mapper>
                                        <type>perm</type>
                                        <user>icapd</user>
                                        <group>icapd</group>
                                        <dirmode>750</dirmode>
                                    </mapper>
                                    <paths>
                                        <path>/var/cache/eblocker-icap/domainblacklist</path>
                                        <path>/var/cache/eblocker-icap/domainblacklist/lists</path>
                                        <path>/var/cache/eblocker-icap/domainblacklist/profiles</path>
                                    </paths>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <!-- Run the server on the command line: mvn exec:exec -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <configuration>
                    <executable>java</executable>
                    <arguments>
                        <argument>-classpath</argument>
                        <classpath/>
                        <argument>org.eblocker.server.app.EblockerServerApp</argument>
                    </arguments>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.6</version>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.plexus</groupId>
                        <artifactId>plexus-utils</artifactId>
                        <version>3.2.1</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>default-minify</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <closureCompilationLevel>ADVANCED_OPTIMIZATIONS</closureCompilationLevel>

                            <webappSourceDir>${project.basedir}/src/main/resources/html-inlays/</webappSourceDir>
                            <webappTargetDir>${project.basedir}/src/main/resources/html-inlays/out/</webappTargetDir>

                            <cssSourceDir>css</cssSourceDir>
                            <cssSourceFiles>
                                <cssSourceFile>controlbar-inlay.css</cssSourceFile>
                            </cssSourceFiles>
                            <cssFinalFile>style.css</cssFinalFile>

                            <skipMerge>true</skipMerge>

                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>controlbar-inlay.js</jsSourceFile>
                                <jsSourceFile>ssl-test.js</jsSourceFile>
                            </jsSourceFiles>

                            <jsEngine>CLOSURE</jsEngine>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
